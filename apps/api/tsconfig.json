{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "es2020",
      "dom"
    ],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    // "typeRoots": [
    //   "./node_modules/@types"
    // ]
  },
  "include": [
    "src/**/*.ts",
    "lib/**/*.ts",
    "bin/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "cdk.out",
    "test",
    "tsup.config.ts",
    "drizzle.config.ts",
    "db"
  ]
}
